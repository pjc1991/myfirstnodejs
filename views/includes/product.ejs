<article class="bg-white rounded-lg shadow-md border border-gray-300 m-4 p-2">

    <div class="flex justify-center">
        <img src="/<%= product.image %>" alt="<%= product.title %>" class="w-80 h-80 object-cover">
    </div>

    <div class="p-4 bg-gray-100 rounded-md my-4">
        <a href="/product/<%= product._id %>">
            <h1 class="text-xl font-bold text-orange-500"><%= product.title %></h1>
        </a>
        <h3 class="text-lg mb-2 text-left text-gray-700 border-b-2 border-gray-200 italic"><%= product.category.categoryName %></h3>
        <h3 class="text-lg text-right text-orange-500"><%= product.price.toLocaleString() %> KRW</h3>
        <p class=""><%= product.description %></p>
    </div>

    <footer class="p-4 rounded-md flex justify-between">
        <% if (isAuthenticated) { %>
            <%- include('../includes/add-to-cart-button.ejs', {product: product}) %>
        <% } %>
    </footer>

</article>