<form action="/cart" method="post" class="">
    <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
    <input type="hidden" name="productId" value="<%= product._id %>" />

    <button type="submit" class="border-orange-500 bg-white border border-orange-500 text-orange-500 font-bold py-2 px-4 rounded hover:bg-orange-500 hover:text-white">
        Add to Cart
    </button>
</form>