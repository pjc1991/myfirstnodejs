<%- include('../includes/header.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
        <form action="" method="post" class="add-product-form">
            <input type="text" name="title" id="title" placeholder="Title" class="add-product-form-input" value="<%= mode === 'edit' ? product.title : '' %>">
            <input type="text" name="imageUrl" id="imageUrl" placeholder="Image URL" class="add-product-form-input" value="<%= mode === 'edit' ? product.imageUrl : '' %>">
            <input type="text" name="price" id="price" placeholder="Price" class="add-product-form-input" value="<%= mode === 'edit' ? product.price : '' %>">
            <textarea name="description" id="description" placeholder="Description" class="add-product-form-input"><%= mode === 'edit' ? product.description : '' %></textarea>
            <% if (mode === 'edit') { %>
                <input type="hidden" name="productId" value="<%= product._id %>">
            <% } %>
            <button type="submit" class="add-product-form-button">Save Product</button>
        </form>
    </main>

<%- include('../includes/footer.ejs') %>