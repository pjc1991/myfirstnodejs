<%- include('../includes/header.ejs') %>
    </head>

    <body class="bg-gray-100">
        <%- include('../includes/navigation.ejs') %>
            <main class="max-w-md mx-auto mt-10">
                <form action="" method="post">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <div class="mb-4">
                        <label for="email" class="block text-gray-700">Email:</label>
                        <input type="email" id="email" name="email" required value="<%= input.email %>" class="w-full px-4 py-2 mt-2 border rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500
                                <%= errors.find(e=> e.path === 'email') ? 'border-red-500' : '' %>">
                    </div>

                    <div class="mb-4">
                        <label for="password" class="block text-gray-700">Password:</label>
                        <input type="password" id="password" name="password" required value="<%= input.password %>"
                            class="w-full px-4 py-2 mt-2 border rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500
                                <%= errors.find(e=> e.path === 'password') ? 'border-red-500' : '' %>">
                    </div>
                    <div class="mb-4">
                        <label for="password2" class="block text-gray-700">Password Confirmation:</label>
                        <input type="password" id="password2" name="password2" required value="<%= input.password2 %>"
                            class="w-full px-4 py-2 mt-2 border rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500
                                <%= errors.find(e=> e.path === 'password2') ? 'border-red-500' : '' %>">
                    </div>
                    <div class="flex justify-center">
                        <button type="submit"
                            class="px-4 py-2 text-white bg-blue-500 rounded-md hover:bg-blue-600 focus:outline-none focus:ring-blue-500 focus:border-blue-500">
                            Sign up
                        </button>
                    </div>
                </form>
            </main>

            <%- include('../includes/modal.ejs', { message:message }) %>
                <%- include('../includes/footer.ejs') %>